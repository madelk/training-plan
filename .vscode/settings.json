{
  "nxConsole.generateAiAgentRules": true,
  "editor.formatOnSave": true,
  "[vue]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
  },
  "files.autoSave": "onFocusChange",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  "files.exclude": {
    "**/node_modules": true,
    "**/.output": true,
    "**/dist": true,
    "**/.nuxt": true
  }
}
